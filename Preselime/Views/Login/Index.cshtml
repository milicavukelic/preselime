@model Preselime.Models.Login.LoginModel
@{
    ViewBag.Title = "Index";

}

<div class="panel panel-default col-md-4 col-md-offset-4" style="padding:0;">
    <div class="panel-heading" style="text-align:center;"><span style="color:red;">@ViewBag.Message</span></div>
    <div class="panel-body">
        <span>Jos uvek nemate nalog? <a href="@Url.Action("Index","Register")" style="color:#99cc00;">Registruj se</a></span><br /><br />
        @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            <label for="inputdefault">*Email:</label><br />
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <div class="form-group">
            <label for="inputdefault">*Lozinka:</label><br />
            @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <div class="form-group">
            <span>Polja sa * su obavezna polja</span>
        </div>
        <div class="form-group">
            <a style="color:#99cc00;" href="">Zaboravili ste lozinku?</a>
        </div>
        <div class="form-group" style="text-align:center;">
            <button type="submit" class="btn btn-success">Uloguj se</button>
        </div>
}
    </div>
    </div>
<div style="clear:both;"></div>

    
